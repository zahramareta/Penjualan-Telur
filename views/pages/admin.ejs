<div class="container mt-3">
    <h4 style="color: #7D6E83;">Data Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small style="color: #76BA99; font-weight: bolder;">Nama Admin</small> <br />
                        <%= admin.nama_admin %>
                    </div>

                    <div class="col-lg-3">
                        <small style="color: #76BA99; font-weight: bolder;">Username</small> <br />
                        <%= admin.username %>
                    </div>

                    <div class="col-lg-3">
                        <small style="color: #76BA99; font-weight: bolder;">Password</small> <br />
                        <%= admin.password %>

                    </div>

                    <div class="col-lg-3">
                        <small style="color: #76BA99; font-weight: bolder;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/admin/edit/<%= admin.id_admin %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/admin/delete/<%= admin.id_admin %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md btn-success">
            Tambah Data
        </button>
    </a>

</div>