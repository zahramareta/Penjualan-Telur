<div class="container">
    <div class="card">
        <div class="card-header" style="background-color: #76BA99;">
            <h4>Form Admin</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Nama Admin
                <input type="text" name="nama_admin" id="nama_admin" class="form-control" value="<%= nama_admin %>" required />

                Username
                <input type="text" name="username" id="username" class="form-control" value="<%= username %>" required />

                Password
                <input type="number" name="password" id="password" class="form-control" value="<%= password %>" required />

                <button type="submit" class="btn btn-success mt-2">
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>