<div class="container mt-3">
    <h4 style="color: #7D6E83; ">Data Pack</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(pack=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small style="color: #76BA99; font-weight: bolder;">Nama Pack</small> <br />
                        <%= pack.nama_pack %>
                    </div>

                    <div class="col-lg-4">
                        <small style="color: #76BA99; font-weight: bolder;">Harga</small> <br />
                        Rp <%= pack.harga %>

                    </div>

                    <div class="col-lg-4">
                        <small style="color: #76BA99; font-weight: bolder;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/pack/edit/<%= pack.id_pack %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/pack/delete/<%= pack.id_pack %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/pack/add">
        <button class="btn btn-md btn-success">
            Tambah Data
        </button>
    </a>

</div>