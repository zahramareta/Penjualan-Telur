<div class="container">
    <h3 style="margin-top: 15px;">List Transaksi</h3>
    <hr>

    <ul class="list-group">
        <% transaksi.forEach(element=> { %>
            <li class="list-group-item">
                <div class="row">
                    <!-- area tgl transaksi -->
                    <div class="col-lg-3">
                        <small>Tgl. Transaksi</small>
                        <h6>
                            <%= element.tgl_transaksi %>
                        </h6>
                    </div>

                    <!-- area nama member -->
                    <div class="col-lg-3">
                        <small>Nama Member</small>
                        <h6>
                            <%= element.nama_member %>
                        </h6>
                    </div>

                    <!-- area nama admin -->
                    <div class="col-lg-3">
                        <small>Nama Admin</small>
                        <h6>
                            <%= element.nama_admin %>
                        </h6>
                    </div>

                    <!-- tombol hapus -->
                    <div class="col-lg-1">
                        <a href="/transaksi/<%= element.id_transaksi %>">
                            <button class="btn btn-danger btn-sm">
                                &times;
                            </button>
                        </a>
                    </div>
                </div>
                <h5 class="mt-2">Daftar Pembelian</h5>
                <ul class="list-group">
                    <% element.detail.forEach(item=> { %>
                        <li class="list-group-item">
                            <div class="row">
                                <!-- area jenis telur -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Jenis Telur</small>
                                    <h6 class="fst-italic">
                                        <%= item.jenis_telur %>
                                    </h6>
                                </div>

                                 <!-- area harga telur -->
                                 <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Harga Telur</small>
                                    <h6 class="fst-italic">
                                        <%= item.harga_telur %>
                                    </h6>
                                </div>

                                <!-- area jumlah telur -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Qty</small>
                                    <h6 class="fst-italic">
                                        <%= item.jumlah_telur %>
                                    </h6>
                                </div>

                                <!-- area total telur -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Total Telur</small>
                                    <h6 class="fst-italic">
                                        <%= Number(item.jumlah_telur * item.harga_telur) %>
                                    </h6>
                                </div>
                                
                                <!-- area jenis pack -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Jenis Pack</small>
                                    <h6 class="fst-italic">
                                        <%= item.nama_pack %>
                                    </h6>
                                </div>
                                
                                <!-- area harga pack -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Harga Pack</small>
                                    <h6 class="fst-italic">
                                        <%= item.harga_pack %>
                                    </h6>
                                </div>

                                <!-- area jumlah pack -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Qty</small>
                                    <h6 class="fst-italic">
                                        <%= item.jumlah_pack %>
                                    </h6>
                                </div>

                                <!-- area total pack -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: 500;">Total Pack</small>
                                    <h6 class="fst-italic">
                                        <%= Number(item.jumlah_pack * item.harga_pack) %>
                                    </h6>
                                </div>

                                <!-- area total -->
                                <div class="col-lg-3">
                                    <small style="color: darkgreen; font-weight: bold;">Total</small>
                                    <h6 class="fst-italic">
                                        <%= Number((item.jumlah_telur * item.harga_telur) + (item.jumlah_pack * item.harga_pack)) %>
                                    </h6>
                                </div>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </li>
            <% }) %>
    </ul>
</div>